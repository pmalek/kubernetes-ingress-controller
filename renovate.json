{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "enabledManagers": ["regex"],
  "automerge": false,
  "separateMinorPatch": true,
  "labels": ["dependencies"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.github/test_dependencies.yaml$"
      ],
      "matchStrings": [
        "#\\s+renovate:\\s+datasource=(?<datasource>.*)\\s+depName=(?<depName>.*)\\s+versioning=(?<versioning>.*)\\n.+'(?<currentValue>.*)'"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^.github/test_dependencies.yaml$"
      ],
      "matchStrings": [
        "#\\s+renovate:\\s+datasource=(?<datasource>.*)\\s+depName=(?<depName>.*)\\s+versioning=(?<versioning>.*)\\n.+'(?<currentValue>.*)'"
      ],
      "extractVersionTemplate": "^kong-?(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["istio/istioctl"],
      "groupName": "istio",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "matchPackagePatterns": ["gke"],
      "groupName": "gke",
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "matchPackagePatterns": ["kindest/node"],
      "groupName": "node",
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ],
  "customDatasources": {
    "gke-rapid": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/kong/gke-renovate-datasource/main/static/rapid.json",
      "format": "json"
    }
  }
}
